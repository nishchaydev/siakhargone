
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Function to check if a user is an admin
    // This assumes you have a custom claim `admin` set to true for admin users.
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // --- Publicly Readable Collections ---
    
    match /schoolHighlights/{docId=**} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /academics/{docId=**} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /announcements/{docId=**} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /galleryItems/{docId=**} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /testimonials/{docId=**} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /jobs/{docId=**} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /principalMessage/{docId=**} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /chairmanMessage/{docId=**} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    // --- Collection-Specific Rules ---

    match /contactFormSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    match /applications/{applicationId} {
        allow create: if true;
        allow read, update, delete: if isAdmin();
    }

    // --- Fallback Rule ---
    // Deny all other access by default.
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
